<form class="form-group" action="/stores" method="post">
  <h4>Add a Store</h4>
  <div class="form-group">
    <label for="name">Enter Store Name:</label>
    <input type="text" name="name" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
</form>

<h3>Stores:</h3>
<% if @stores.any? %>
 <% @stores.each do |store| %>
   <ul>
     <li><a href="/stores/<%= store.id %>"><%= store.name %></a></li>
   </ul>
 <% end %>
<% else %>
 <p>There are no stores yet.</p>
<% end %>

<form action="/shoe" method="post" class= "form-group">
  <label for="brand">Shoe Brand</label>
  <input type="text" name="brand" class="form-control">
  <label for="price">Price</label>
  <input type="integer" name="price" class="form-control"> <br>
  <button type="submit" class="btn btn-primary">Add</button>
</form>

<h3>Shoe Brands:</h3>
<% if @shoes.any? %>
  <% @shoes.each do |shoe| %>
    <ul>
      <li><a href="/shoes/<%= shoe.id %>"><%= shoe.brand %></a></li>
    </ul>
  <% end %>
<% else %>
  <p>There are no brands yet.</p>
<% end %>
